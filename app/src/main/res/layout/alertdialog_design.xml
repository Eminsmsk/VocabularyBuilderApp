<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false">

    <EditText
        android:id="@+id/editTextWord"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Word"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextAntonyms"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Antonyms"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextSynonyms"
        app:layout_constraintTop_toBottomOf="@+id/editTextSynonyms" />

    <EditText
        android:id="@+id/editTextAddImage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:hint="Add Image"
        android:inputType="none"
        app:layout_constraintStart_toStartOf="@+id/editTextAntonyms"
        app:layout_constraintTop_toBottomOf="@+id/editTextAntonyms" />

    <EditText
        android:id="@+id/editTextSynonyms"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Synonyms"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextExample"
        app:layout_constraintTop_toBottomOf="@+id/editTextExample" />

    <EditText
        android:id="@+id/editTextDefinition"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Definition"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextWord"
        app:layout_constraintTop_toBottomOf="@+id/editTextWord" />

    <EditText
        android:id="@+id/editTextExample"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Example"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextDefinition"
        app:layout_constraintTop_toBottomOf="@+id/editTextDefinition" />

</androidx.constraintlayout.widget.ConstraintLayout>