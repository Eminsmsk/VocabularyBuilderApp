<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/notifyWordImage"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_marginLeft="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/notifyWordName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Word Name"
            android:textColor="#000000"
            android:textSize="18dp"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notifyWordDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Compat.Notification.Time"
            android:text="description\nexample\nsynoynms\nantoynms" />


    </LinearLayout>
</LinearLayout>